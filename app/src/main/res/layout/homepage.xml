<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navy"
        >

        <ImageView
            android:id="@+id/backgroundMainMenu"
            android:layout_width="421dp"
            android:layout_height="355dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rectangle" />

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="68dp"
            android:layout_height="57dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="D4 - Teknik Informatika"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePhoto"
            app:layout_constraintTop_toBottomOf="@+id/fullName" />

        <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="59dp"
            android:layout_height="41dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logout" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="36dp"
            android:text="Balance (Rupiah)"
            android:textStyle="bold"
            android:textColor="@color/grey_959"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:text="Rp800.000,-"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money"
            app:srcCompat="@drawable/add" />

        <ImageView
            android:id="@+id/sendIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/addIcon"
            app:layout_constraintTop_toBottomOf="@+id/money"
            app:srcCompat="@drawable/send" />

        <ImageView
            android:id="@+id/receiveIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/sendIcon"
            app:layout_constraintTop_toBottomOf="@+id/money"
            app:srcCompat="@drawable/receive" />

        <ImageView
            android:id="@+id/payIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/receiveIcon"
            app:layout_constraintTop_toBottomOf="@+id/money"
            app:srcCompat="@drawable/bill" />

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="37dp"
            android:text="Berryl Radian Hamesha"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:text="Add"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundMainMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addIcon"
            app:layout_constraintVertical_bias="0.074" />

        <TextView
            android:id="@+id/sendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:text="Send"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundMainMenu"
            app:layout_constraintStart_toEndOf="@+id/addText"
            app:layout_constraintTop_toBottomOf="@+id/sendIcon"
            app:layout_constraintVertical_bias="0.085" />

        <TextView
            android:id="@+id/receiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:text="Receive"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundMainMenu"
            app:layout_constraintStart_toEndOf="@+id/sendText"
            app:layout_constraintTop_toBottomOf="@+id/receiveIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/payText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="Pay"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundMainMenu"
            app:layout_constraintStart_toEndOf="@+id/receiveText"
            app:layout_constraintTop_toBottomOf="@+id/payIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/invoiceMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:text="Invoice"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundMainMenu" />

        <TextView
            android:id="@+id/financialReportMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:text="Financial Report"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundSubMenuInvoice" />

        <ImageView
            android:id="@+id/backgroundSubMenuInvoice"
            android:layout_width="400dp"
            android:layout_height="133dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/invoiceMenu"
            app:srcCompat="@drawable/background_menu_squircle" />


        <ImageView
            android:id="@+id/insuranceIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintVertical_bias="0.511"
            app:srcCompat="@drawable/insurance" />

        <ImageView
            android:id="@+id/educationIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/insuranceIcon"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintVertical_bias="0.511"
            app:srcCompat="@drawable/education" />

        <ImageView
            android:id="@+id/creditCardIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/educationIcon"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintVertical_bias="0.511"
            app:srcCompat="@drawable/credit_card" />

        <ImageView
            android:id="@+id/electricityIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/creditCardIcon"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintVertical_bias="0.511"
            app:srcCompat="@drawable/electricity" />

        <TextView
            android:id="@+id/insuranceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Insurance"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintStart_toStartOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintTop_toBottomOf="@+id/insuranceIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/educationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Education"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintStart_toEndOf="@+id/insuranceText"
            app:layout_constraintTop_toBottomOf="@+id/educationIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/creditCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Credit Card"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintStart_toEndOf="@+id/educationText"
            app:layout_constraintTop_toBottomOf="@+id/creditCardIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/electricityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Electricity"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundSubMenuInvoice"
            app:layout_constraintStart_toEndOf="@+id/creditCardText"
            app:layout_constraintTop_toBottomOf="@+id/electricityIcon"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/backgroundSubMenuFinancialReport"
            android:layout_width="400dp"
            android:layout_height="133dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/financialReportMenu"
            app:srcCompat="@drawable/background_menu_squircle" />

        <ImageView
            android:id="@+id/financialRecordIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/backgroundSubMenuFinancialReport"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuFinancialReport"
            app:srcCompat="@drawable/financial_record" />

        <ImageView
            android:id="@+id/historyIcon"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="57dp"
            app:layout_constraintStart_toEndOf="@+id/financialRecordIcon"
            app:layout_constraintTop_toTopOf="@+id/backgroundSubMenuFinancialReport"
            app:srcCompat="@drawable/history" />

        <TextView
            android:id="@+id/financialRecordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:text="Financial \n Records"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/backgroundSubMenuFinancialReport"
            app:layout_constraintTop_toBottomOf="@+id/financialRecordIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="History"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundSubMenuFinancialReport"
            app:layout_constraintStart_toEndOf="@+id/financialRecordText"
            app:layout_constraintTop_toBottomOf="@+id/historyIcon"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/specialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:text="Special For You"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundSubMenuFinancialReport" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImageSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/specialText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>